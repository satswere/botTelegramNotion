# Telegram Notion Bot Configuration - v2.0
# Copy this file to .env and update with your actual values

# Environment settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Required API tokens
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
NOTION_TOKEN=your_notion_token_here

# Notion database configuration
NOTION_DATABASE_ID=27aa8baa-ff5a-808b-8cc4-d3cc8f010fa0

# Storage configuration (optional, uses defaults if not set)
STORAGE_PATH=storage
# IMAGES_PATH=storage/images  
# LOGS_PATH=storage/logs

# Application limits
MAX_IMAGE_SIZE=10485760  # 10MB in bytes
REQUEST_TIMEOUT=30       # seconds
MAX_CONCURRENT_UPLOADS=5

# Security (optional)
RATE_LIMIT_PER_MINUTE=30
# ALLOWED_CHAT_IDS=123456789,987654321  # Comma-separated list

# Advanced settings (usually not needed to change)
NOTION_API_VERSION=2022-06-28
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0